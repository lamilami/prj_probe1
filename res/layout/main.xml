<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/silver_alum"
    android:columnCount="33"
    android:orientation="horizontal" >

    <Space android:layout_column="6" />

    <Space android:layout_column="9" />

    <Space />

    <ProgressBar
        android:id="@+id/ProgressBarGreen"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_gravity="left|bottom"
        android:layout_row="3"
        android:minHeight="50dp"
        android:minWidth="330dp"
        android:progressDrawable="@drawable/progressbar1" />

    <ProgressBar
        android:id="@+id/ProgressBarBlue"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_gravity="left|top"
        android:layout_row="7"
        android:minHeight="50dp"
        android:minWidth="330dp"
        android:progressDrawable="@drawable/progressbar2" />

    <ProgressBar
        android:id="@+id/ProgressBarRed"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_gravity="left|bottom"
        android:layout_row="13"
        android:minHeight="50dp"
        android:minWidth="330dp"
        android:progressDrawable="@drawable/progressbar3" />

    <Space />

    <com.probe1.CustomTextView
        android:id="@+id/greentxt"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_column="28"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:background="@drawable/rounded_corner"
        android:paddingLeft="17dp"      
        android:paddingTop="4dp"
        android:shadowColor="#CCFF99"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="2"
        android:textColor="#7FBA00"
        android:textSize="45sp" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_column="27"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:src="@drawable/screw" />

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_column="3"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:src="@drawable/screw" />

    <ImageView
        android:id="@+id/ImageView06"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_column="3"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:src="@drawable/screw" />

    <ImageView
        android:id="@+id/ImageView04"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_column="3"
        android:layout_gravity="left|top"
        android:layout_row="9"
        android:src="@drawable/screw" />

    <ImageView
        android:id="@+id/ImageView09"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_column="32"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="2"
        android:src="@drawable/screw" />

    <ImageView
        android:id="@+id/ImageView10"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_column="32"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="4"
        android:src="@drawable/screw" />

    <ImageView
        android:id="@+id/ImageView08"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_column="32"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="9"
        android:src="@drawable/screw" />

    <ImageView
        android:id="@+id/ImageView05"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_column="27"
        android:layout_gravity="left|center_vertical"
        android:layout_row="15"
        android:src="@drawable/screw" />

    <ImageView
        android:id="@+id/ImageView03"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_column="32"
        android:layout_gravity="center"
        android:layout_row="15"
        android:src="@drawable/screw" />

    <ImageView
        android:id="@+id/ImageView07"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_column="3"
        android:layout_gravity="left|center_vertical"
        android:layout_row="15"
        android:src="@drawable/screw" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="28"
        android:layout_gravity="center"
        android:layout_row="15"
        android:text="@string/ok" />

    <com.probe1.CustomTextView
        android:id="@+id/CustomTextView01"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_column="28"
        android:layout_gravity="left|top"
        android:layout_row="7"
        android:background="@drawable/rounded_corner"
        android:paddingLeft="17dp"
        android:paddingTop="4dp"
        android:shadowColor="#CCFF99"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="2"
        android:textColor="#7FBA00"
        android:text="GUN 50%"
        android:textSize="45sp"/>

    <com.probe1.CustomTextView
        android:id="@+id/CustomTextView02"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_column="28"
        android:layout_gravity="left|top"
        android:layout_row="13"
        android:background="@drawable/rounded_corner"
        android:paddingLeft="17dp"
        android:paddingTop="4dp"
        android:shadowColor="#CCFF99"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="2"
        android:textColor="#7FBA00"
        android:textSize="45sp"
         android:text="LIVES 100%"  />

    <Button
        android:id="@+id/buttonMAP"
        android:layout_width="65dp"
        android:layout_height="52dp"
        android:layout_column="6"
        android:layout_gravity="right|center_vertical"
        android:layout_row="15"
        android:background="@drawable/map" />

    <Button
        android:id="@+id/btnSOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="28"
        android:layout_gravity="left|center_vertical"
        android:layout_row="15"
        android:text="SOS" />

    <Switch
        android:id="@+id/switch1"
        android:layout_column="6"
        android:layout_gravity="left|center_vertical"
        android:layout_row="15"
        android:text="Switch" />

</GridLayout>